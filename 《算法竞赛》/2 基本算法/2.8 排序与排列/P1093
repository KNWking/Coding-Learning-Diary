#include <bits/stdc+.h>
using namespace std;

struct stu{
    int id;
    int c, m , e;
    int sum;
}stu[310];

bool cmp(stu a, stu b){
    if(a.sum > b.sum) return true;
    else if(b.sum > a.sum) return false;
    else{
        if(a.c > b.c) return true;
        else if(b.c > a.c) return false;
        else if(a.c == b.c){
            if(a.id < b.id) return true;
            else return false;
        }
    }
}

int n;

int main(){
    cin >> n;
    for(int i = 1; i <= n; ++i){
        stu[i].id = i;
        cin >> stu[i].c >> stu[i].m >> stu[i].e;
        sum = stu[i].c + stu[i].m + stu[i].e;
    }
    sort(stu + 1, stu + n, cmp());
    int max = stu[1].sum;
    for(int i = 1; i <= n; ++i){
        if(stu.sum == max)
            cout << stu.id << " " << stu.sum << endl;
    }
    return 0;
}
